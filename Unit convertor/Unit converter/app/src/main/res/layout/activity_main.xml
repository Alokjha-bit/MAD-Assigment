<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/main"
    android:gravity="center"
    android:background="#dcfffb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginBottom="16dp"
        android:text="Unit Converter"
        android:textSize="24sp"
        android:layout_width="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|center"
        android:orientation="vertical">
        <Spinner android:id="@+id/input_spinner"
            android:layout_height="50dp"
            android:layout_width="300dp"
            android:layout_marginBottom="16dp"/>
        <EditText android:id="@+id/input_value"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter value"
            android:inputType="numberDecimal"/>
        <Spinner android:id="@+id/output_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <TextView android:text="Converted value:"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button android:id="@+id/buttonConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Convert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/output_spinner"/>
        <TextView android:id="@+id/output_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>